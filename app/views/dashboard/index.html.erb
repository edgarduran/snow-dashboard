<body class="dash-bkg">

<h1 class="text-center" id="dash-header"><%= current_user.name %>'s Dashboard</h1>
<div class="show-snow text-center">
  <% unless current_user.resorts == [] %>
    <button type="button" class="btn btn-default btn-lg">
      <span class="glyphicon glyphicon-sunglasses" aria-hidden="true"></span> Snow Report
    </button>
  <% end %>
</div><br>
<div class="overlay hidden">
  <button type="button" class="btn btn-warning">X</button>
    <%= render partial: 'partials/snow_graph' %>
</div>
<div class="row">
  <%= render partial: 'partials/resort_search' %>
  <% unless current_user.phone_number %>
    <%= render partial: 'partials/phone_number_form' %>
  <% end %>
</div><br><br>
<% if current_user.resorts == [] %>
  <h3 class="text-center" id="dash-header">Your dashboard is empty add your favorite resorts to begin playing</h3>
<% else %>
  <div class="resorts">
    <%= render partial: 'partials/users_resorts' %>
  </div>
<% end %>

<script src="assets/js/jquery.min.js"></script>
<script src="assets/bootstrap/js/bootstrap.min.js"></script>

</body>

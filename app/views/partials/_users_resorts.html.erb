<div class="container">

  <h2 class="center" >Favorite Resorts</h2>
  <div class="row">
    <% @resorts.each_with_index do |resort, index| %>
      <div class="col-sm-6 col-md-4">
        <ul>
          <li><h3>Name: <%= resort.official_name %></h3></li>
          <li>State: <%= resort.state %></li>
          <li>Description: <%= resort.description %></li>
          <li>Type: <%= resort.type %></li>
        </ul>
        <h4>Weather</h4>
        <h5>Today</h5>
        <%= @forecast[index].first %>
        <h5><%= DateTime.tomorrow.strftime("%A") %></h5>
        <%= @forecast[index][1] %>
        <h5><%= (DateTime.tomorrow + 1).strftime("%A") %></h5>
        <%= @forecast[index].last %>
      </div>
    <% end %>
  </div>

</div>
